{
  "name": "khaalis-harvest-platform",
  "version": "1.0.0",
  "description": "Pakistan's premier organic marketplace - Khaalis Harvest - تازہ، خالص، قدرتی مصنوعات",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "web": "cd apps/web && yarn dev",
    "backend": "cd apps/backend && yarn start:dev",
    "db:migrate": "cd apps/backend && yarn migration:run",
    "db:generate": "cd apps/backend && yarn migration:generate",
    "setup": "yarn install && yarn db:migrate",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:full": "docker-compose -f docker-compose.full.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.full.yml down && docker-compose -f docker-compose.prod.yml down",
    "deploy:local": "./deploy.sh local",
    "deploy:staging": "./deploy.sh staging",
    "deploy:prod": "./deploy.sh production",
    "start:prod": "concurrently \"cd apps/backend && yarn start:prod\" \"cd apps/web && yarn start\"",
    "health": "curl -f http://localhost:3000/api/v1/health || echo 'Backend not running'"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "concurrently": "^8.2.2"
  }
}
