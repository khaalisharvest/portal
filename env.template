# Khaalis Harvest Platform - Environment Variables
# Copy this file to .env: cp env.template .env
# Then update the values marked with <REPLACE_THIS>

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000
FRONTEND_PORT=3001

# ===========================================
# DATABASE CONFIGURATION (Docker Compose - Local PostgreSQL)
# ===========================================
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=<REPLACE_THIS_WITH_SECURE_PASSWORD>
DB_NAME=khaalis_harvest
DATABASE_URL=postgresql://postgres:<REPLACE_THIS_WITH_SECURE_PASSWORD>@postgres:5432/khaalis_harvest

# ===========================================
# REDIS CONFIGURATION (Docker Compose - Local Redis)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=<REPLACE_THIS_WITH_RANDOM_32_CHAR_MIN_SECRET>
JWT_EXPIRES_IN=7d

# ===========================================
# API CONFIGURATION
# Replace <YOUR_PUBLIC_IP> with your Azure VM IP (e.g., 4.213.98.234)
# Or replace with your domain name once configured (e.g., https://yourdomain.com)
# ===========================================
NEXT_PUBLIC_API_URL=http://<YOUR_PUBLIC_IP>:3000/api/v1
NEXT_PUBLIC_APP_URL=http://<YOUR_PUBLIC_IP>:3001
BACKEND_URL=http://<YOUR_PUBLIC_IP>:3000
FRONTEND_URL=http://<YOUR_PUBLIC_IP>:3001
ADMIN_URL=http://<YOUR_PUBLIC_IP>:3001

# ===========================================
# CORS CONFIGURATION
# Add your domain when you have one, e.g., https://yourdomain.com
# ===========================================
ALLOWED_ORIGINS=http://<YOUR_PUBLIC_IP>:3000,http://<YOUR_PUBLIC_IP>:3001

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_NAME=Khaalis Harvest

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
NEXT_PUBLIC_ADMIN_WHATSAPP=+923204749700
SUPER_ADMIN_EMAIL=admin@khaalisharvest.pk
SUPER_ADMIN_PHONE=+923204749700

